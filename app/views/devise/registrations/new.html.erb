<div class="container pt-sm">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow zindex-100">
        <div class="card-body px-md-5 py-5">
          <span class="clearfix"></span>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "form-control-label" %>
              <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
  	  	          <span class="input-group-text">
  	  	          	<i class="fas fa-envelope"></i>
  	  	          </span>
                </div>
                <%= f.email_field :email, class: "form-control", placeholder: "name@example.com" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "form-control-label" %>
              <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
  	  	          <span class="input-group-text">
  	  	          	<i class="fas fa-key"></i>
  	  	          </span>
                </div>
                <%= f.password_field :password, class: "form-control", placeholder: "********" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: "form-control-label" %>
              <div class="input-group input-group-transparent">
                <div class="input-group-prepend">
  	  	          <span class="input-group-text">
  	  	          	<i class="fas fa-key"></i>
  	  	          </span>
                </div>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "********" %>
              </div>
            </div>
            <div class="my-4">
              <p class="text-sm">
                By registering, you agree to the
                <%= link_to "privacy policy", root_path %>
                and
                <%= link_to "terms of service", root_path %>.
              </p>
            </div>
            <div class="row align-items-center">
              <div class="col-sm-7">
                <%= f.submit "Create account", class: "btn btn-primary mb-3 mb-sm-0" %>
              </div>
              <div class="col-sm-5 text-sm-right">
                <span class="small d-sm-block d-md-inline">Already registered?</span>
                <%= link_to "Sign in", new_user_session_path(resource), class: "small font-weight-bold" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>